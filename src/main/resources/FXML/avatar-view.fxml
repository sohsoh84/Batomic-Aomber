<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batomicaomber.view.AvatarController" onDragOver="#handleDragOver" onDragDropped="#handleDragDropped">
    <children>
        <ImageView fx:id="mainImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" onDragOver="#handleDragOver" onDragDropped="#handleDragDropped" />
        <HBox alignment="CENTER" spacing="10.0">
            <ImageView fx:id="smallImageView1" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#sampleAvatarClick" />
            <ImageView fx:id="smallImageView2" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#sampleAvatarClick"/>
            <ImageView fx:id="smallImageView3" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#sampleAvatarClick"/>
        </HBox>
        <Button fx:id="chooseFileButton" text="Choose From File" onAction="#chooseFileButtonAction" />

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="applyButton" text="Apply" onMouseClicked="#apply" />
            <Button fx:id="cancelButton" text="Cancel" onMouseClicked="#cancel" />
        </HBox>
    </children>
</VBox>