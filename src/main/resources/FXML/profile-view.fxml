<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batomicaomber.view.ProfileController">
    <children>
        <Button fx:id="avatarMenuButton" mnemonicParsing="false" onMouseClicked="#goToAvatarMenu" text="Avatar Menu" />
        <TextField fx:id="newUsernameTextField" maxWidth="250.0" promptText="New Username:" />
        <TextField fx:id="newPasswordTextField" maxWidth="250.0" promptText="New Password:" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
              <Button fx:id="resetUsernameAndPasswordButton" mnemonicParsing="false" onAction="#resetUsernameAndPassword" text="Reset Username and Password" />
              <Button fx:id="deleteAccountButton" mnemonicParsing="false" onAction="#deleteAccount" text="Delete Account" />
         </children>
      </HBox>

    <Label fx:id="errorLabel" styleClass="error-label" />

    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <children>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" text="logout" />
            <Button fx:id="startNewGame" mnemonicParsing="false" onAction="#goToMainMenu" text="Main Menu" />
        </children>
    </HBox>

    </children>

</VBox>
