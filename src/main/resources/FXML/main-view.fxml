<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.batomicaomber.view.MainController">
    <children>
        <ImageView fx:id="avatarImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="usernameLabel" text="Username" styleClass="username-label" />
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Button fx:id="newGameButton" text="New Game" onMouseClicked="#newGameButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button fx:id="continueGameButton" text="Continue Game" onMouseClicked="#continueGameButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button fx:id="scoreboardButton" text="Scoreboard" onMouseClicked="#scoreboardButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button fx:id="settingsButton" text="Settings" onMouseClicked="#settingsButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="profileMenuButton" text="Profile Menu" onMouseClicked="#profileMenuButtonAction" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Button fx:id="exitButton" text="Exit" onMouseClicked="#exitButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>
    </children>
</VBox>